<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/colorfulRingProgressView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:donut_progress="0"
        app:donut_circle_starting_degree="90"
        app:donut_background_color="@color/colorWhite"
        app:donut_unfinished_stroke_width="0dp"
        app:donut_finished_stroke_width="5dp"
        app:donut_finished_color="@color/colorPrimary"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/groupLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="7dp"
        android:src="@drawable/group"
        app:layout_constraintBottom_toBottomOf="@+id/colorfulRingProgressView"
        app:layout_constraintEnd_toEndOf="@+id/colorfulRingProgressView"
        app:layout_constraintStart_toStartOf="@+id/colorfulRingProgressView"
        app:layout_constraintTop_toTopOf="@+id/colorfulRingProgressView" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Group Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/reject"
        app:layout_constraintStart_toEndOf="@id/groupLogo"
        app:layout_constraintTop_toTopOf="@id/groupLogo" />

    <TextView
        android:id="@+id/groupProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="$500/$2000"
        app:layout_constraintBottom_toBottomOf="@id/groupLogo"
        app:layout_constraintEnd_toEndOf="@+id/groupName"
        app:layout_constraintStart_toEndOf="@id/groupLogo" />

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/design_default_color_error"
        android:padding="10dp"
        android:text="x"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/groupLogo"
        app:layout_constraintEnd_toStartOf="@id/accept"
        app:layout_constraintTop_toTopOf="@id/groupLogo" />

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_gradient_primary"
        android:padding="10dp"
        android:text=" âœ” "
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/groupLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/groupLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>